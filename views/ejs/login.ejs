<body>
        <!-- from login -->
        <div class="login" style="background-image: url(images/shoes-img1.png);background-position: right;">
                <div class="login__container">
                        <h1>Đăng Nhập</h1>
                        <form action="./sign-in" method="post">
                                <h5>Tài khoản</h5>
                                <input type="text" id="input-login-username" name="username" />
                                <h5>Mật khẩu</h5>
                                <input type="password" id="input-login-password" name="password" />
                                <button onclick="login()" type="submit" class="login__signInButton">Đăng Nhập</button>
                        </form>
                        <a href="./signup.html" class="login__registerButton">Tạo tài khoản mới</a>
                </div>
        </div>
</body>
